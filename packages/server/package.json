{
    "name": "@abb/server",
    "version": "0.0.1",
    "description": "Awesome project developed with TypeORM.",
    "devDependencies": {
        "@types/jest": "^26.0.22",
        "@types/node": "^14.14.41",
        "@types/uuid": "^8.3.0",
        "gql2ts": "^1.10.1",
        "jest": "^26.6.3",
        "ts-jest": "^26.5.5",
        "ts-node": "9.1.1",
        "typescript": "^4.2.4"
    },
    "dependencies": {
        "argon2": "^0.27.2",
        "graphql-request": "^3.4.0",
        "graphql-yoga": "^1.18.3",
        "nodemon": "^2.0.7",
        "pg": "8.6.0",
        "reflect-metadata": "0.1.13",
        "typeorm": "0.2.32",
        "uuid": "^8.3.2"
    },
    "scripts": {
        "start": "NODE_ENV=dev nodemon --exec ts-node --files src/index.ts",
        "test": "NODE_ENV=test jest",
        "gen-schema-types": "gql2ts src/schema.graphql -o src/types/graphql.d.ts"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
